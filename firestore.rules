
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // === USERS COLLECTION ===
    match /users/{userId} {
      // ANY authenticated user can create their own user document (for signup).
      // An ADMIN can create any user document.
      allow create: if isUserAuthenticated() || isUserRole('admin');
      
      // A user can read THEIR OWN document.
      // An ADMIN can read ANY user document.
      // A DOCTOR can read ANY user document (to find patients).
      allow read: if isOwner(userId) || isUserRole('admin') || isUserRole('doctor');
      
      // A user can update THEIR OWN document (e.g., their name).
      // An ADMIN can update ANY user document.
      allow update: if isOwner(userId) || isUserRole('admin');
      
      // Only an ADMIN can delete a user document.
      allow delete: if isUserRole('admin');
      
      // --- SUBCOLLECTIONS ---
      
      // Appointments: Patients can manage their own, Doctors/Admins can manage any.
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(userId) || isUserRole('doctor') || isUserRole('admin');
      }
      
      // Prescriptions: Only Doctors/Admins can create/manage. Patients can read their own.
      match /prescriptions/{prescriptionId} {
        allow create, update, delete: if isUserRole('doctor') || isUserRole('admin');
        allow read: if isOwner(userId) || isUserRole('doctor') || isUserRole('admin');
      }
    }
  }
}
